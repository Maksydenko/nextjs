{
  "editor.detectIndentation": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": true,
    "source.fixAll.eslint": true
  },
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "eslint.format.enable": true,
  "eslint.workingDirectories": [
    "./front"
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
  ],
  "stylelint.validate": [
    "css",
    "scss",
    "less",
    "postcss"
  ],
}